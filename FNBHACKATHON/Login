    <form id="form1" runat="server">
        <div class="login-container">
            <div class="login-header">
                <div class="logo-circle">👋</div>
                <h1 class="welcome-back">Welcome Back!</h1>
                <p class="welcome-subtitle">We're so glad to see you again. Your journey continues here.</p>
            </div>

            <div class="form-content">
                <div class="warm-message">
                    <h2>Great to have you back!</h2>
                    <p>Sign in to access your account and continue building your success story with SideHustle SA.</p>
                </div>

                <!-- Error Message -->
                <div class="error-message" id="errorMessage">
                    <asp:Label ID="lblError" runat="server" Text=""></asp:Label>
                </div>

                <!-- Login Form -->
                <div class="form-group">
                    <label>Email Address <span class="required">*</span></label>
                    <div class="input-wrapper">
                        <asp:TextBox ID="txtEmail" runat="server" CssClass="form-control" placeholder="your.email@example.com" TextMode="Email" required="required"></asp:TextBox>
                        <span class="input-icon">📧</span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Password <span class="required">*</span></label>
                    <div class="input-wrapper">
                        <asp:TextBox ID="txtPassword" runat="server" CssClass="form-control" placeholder="Enter your password" TextMode="Password" required="required"></asp:TextBox>
                        <span class="input-icon">🔒</span>
                        <button type="button" class="password-toggle" onclick="togglePassword()">👁️</button>
                    </div>
                </div>

                <div class="form-options">
                    <div class="remember-me">
                        <asp:CheckBox ID="chkRememberMe" runat="server" />
                        <label for="<%= chkRememberMe.ClientID %>">Remember me</label>
                    </div>
                    <a href="ForgotPassword.aspx" class="forgot-password">Forgot Password?</a>
                </div>

                <asp:Button ID="btnLogin" runat="server" Text="Sign In" CssClass="btn-login" OnClick="btnLogin_Click"/>

                <div class="register-link">
                    Don't have an account? <a href="RegisterCustomer.aspx">Create One Now</a>
                </div>
            </div>
        </div>
    </form>

    <script type="text/javascript">
        function togglePassword() {
            var passwordField = document.getElementById('<%= txtPassword.ClientID %>');
            var toggleBtn = document.querySelector('.password-toggle');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleBtn.textContent = '🙈';
            } else {
                passwordField.type = 'password';
                toggleBtn.textContent = '👁️';
            }
        }

        // Hide error/success messages when user starts typing
        document.getElementById('<%= txtEmail.ClientID %>').addEventListener('input', function () {
            document.getElementById('errorMessage').classList.remove('show');
            document.getElementById('successMessage').classList.remove('show');
        });

        document.getElementById('<%= txtPassword.ClientID %>').addEventListener('input', function() {
        document.getElementById('errorMessage').classList.remove('show');
        document.getElementById('successMessage').classList.remove('show');
    });

    // Form validation - fixed to work with ASP.NET
    var form = document.getElementById('form1');
    if (form) {
        form.addEventListener('submit', function(e) {
            var email = document.getElementById('<%= txtEmail.ClientID %>').value.trim();
            var password = document.getElementById('<%= txtPassword.ClientID %>').value.trim();

            if (!email || !password) {
                e.preventDefault();
                var errorMsg = document.getElementById('errorMessage');
                // Use the ASP.NET label or create a temporary message
                var errorLabel = errorMsg.querySelector('span') || errorMsg;
                errorLabel.textContent = 'Please enter both email and password.';
                errorMsg.classList.add('show');
                return false;
            }

            // Disable button to prevent double submission
            var btnLogin = document.getElementById('<%= btnLogin.ClientID %>');
            if (btnLogin) {
                btnLogin.disabled = true;
                btnLogin.textContent = 'Signing in...';
            }
        });
        }

        // Check URL parameters for messages
        window.addEventListener('load', function () {
            const urlParams = new URLSearchParams(window.location.search);

            if (urlParams.get('registered') === 'true') {
                var successMsg = document.getElementById('successMessage');
                if (successMsg) {
                    var successLabel = successMsg.querySelector('span') || successMsg;
                    successLabel.textContent = 'Account created successfully! Please sign in.';
                    successMsg.classList.add('show');
                }
            }

            if (urlParams.get('reset') === 'true') {
                var successMsg = document.getElementById('successMessage');
                if (successMsg) {
                    var successLabel = successMsg.querySelector('span') || successMsg;
                    successLabel.textContent = 'Password reset successfully! Please sign in with your new password.';
                    successMsg.classList.add('show');
                }
            }

            // Check for logout
            if (urlParams.get('logout') === 'true') {
                var successMsg = document.getElementById('successMessage');
                if (successMsg) {
                    var successLabel = successMsg.querySelector('span') || successMsg;
                    successLabel.textContent = 'You have been successfully logged out.';
                    successMsg.classList.add('show');
                }
            }
        });
    </script>
</body>
